<script>
    let urlParams = new URLSearchParams(new URL(window.location.href).search);
    let pageParam = urlParams.get('page');
    let PAGE = pageParam ? parseInt(pageParam, 10) : 1;
    let LIMIT = 9

    let INPUT = ""
    let TYPE = []
    let LOCATIONS = []
    let SKILLS = []

    let SELECTED_LOCATION = []
    let checkedStatusLocations = {}
    let checkedStatusSkills = {}


    CountAllPlatform()
    GetPosts("", LIMIT, PAGE)

    $("#pagination-back").click(function(){ 
        PAGE -= 1
        GetPosts(INPUT, LIMIT, PAGE)
        CountAllPlatform()
    })
    $("#pagination-forward").click(function(){ 
        PAGE += 1
        GetPosts(INPUT, LIMIT, PAGE)
        CountAllPlatform()
    })
    $("#cards").on("click", ".job-detail", function(){
        const CARD_ID = $(this).find(".id").text()
        $("#popup-home").fadeIn(function(){
            $("#popup-detail-job").slideToggle()
            $("body").css("overflow", "hidden")

            $.get(`/api/v1/posts/${CARD_ID}`, function(postData){
                postData = decrypt(postData.r)
                console.log(postData);
                $("#popup-title").text(postData.title)
                $("#popup-company").text(postData.company)
                $("#popup-location").text(postData.location)
                $("#popup-platform").text(postData.platform)
                $("#popup-link").prop("href", postData.link)
                

                if(postData.overview !== "<p></p>"){
                    let paragraph = postData.overview.split("\n")
                    $("#popup-overview").html(paragraph.join("</br>"))
                }else if (postData.overview == "<p></p>"){
                    $("#popup-overview").text("Tidak ada overview ditampilkan ~")
                }

                if(postData.skills.length > 0){
                    $("#skills-need").removeClass("hidden")
                    $("#skills").html(``)
                    postData.skills.forEach(function(skill){
                        $("#skills").append(`<button class="text-sm self-start bg-main text-white px-2.5 py-1.5 rounded-md">${skill.skill}</button>`)
                    })
                }else{
                    $("#skills-need").addClass("hidden")
                    $("#skills").html(``)
                }
            })

        }).css("display", "flex")
    })
    $("#close-detail-job").click(function(){
        $("#popup-detail-job").slideToggle(function(){
            $("#popup-home").fadeOut()
            $("body").css("overflow", "auto")
        })
    })

    $("#button-filter").click(function(){
        $("#popup-home").fadeIn(function(){
            $("body").addClass('no-scroll');
            $("#popup-filter").slideToggle()
        }).css("display", "flex")
    })

    $(".close-x").click(function(){
        $(this).closest('.popup').slideToggle(function(){
            $(this).closest('#popup-home').fadeOut()
            $("body").css("overflow", "auto")
        })
        $("body").removeClass('no-scroll');
    })

    $.get("/api/v1/users/locations", function(locationData){
        locationData = decrypt(locationData.r)
        locationData.forEach(location => {
            $(".list-locations").append(`
                <li>
                    <div class="flex items-center ps-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                        <p style="display:none">${location.id}</p>
                        <input id="checkbox-${location.id}" type="checkbox" value="${location.location.toLowerCase()}" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                        <label for="checkbox-${location.id}" class="w-full py-2 ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">${location.location}</label>
                    </div>
                </li>
            `)
        })

        $(".locations-input").on("input", function(){
            const INPUT = $(this).val().toLowerCase(); // Ambil nilai input dalam lowercase
            $(".list-locations").html(""); // Kosongkan daftar institusi

            const filteredLocations = locationData.filter(location => {
                return location.location.toLowerCase().includes(INPUT);
            });

            filteredLocations.forEach(location => {
                const isChecked = checkedStatusLocations[location.location.toLowerCase()] ? 'checked' : ''; // Cek apakah checkbox harus dicentang
                $(".list-locations").append(`
                    <li>
                        <div class="flex items-center ps-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                            <p style="display:none">${location.id}</p>
                            <input id="radio-${location.id}" ${isChecked} name="location" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="checkbox-${location.id}" class="w-full py-2 ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">${location.location}</label>
                        </div>
                    </li>
                `);
            });
        });
    
        $(".list-locations").on("change", "input[type=checkbox]", function(){
            const SKILL_ID = $(this).prev().text();
            const LABEL = $(this).next().text();
            checkedStatusLocations[LABEL.toLowerCase()] = $(this).prop("checked");
        })
    })
    
    $.get("/api/v1/users/skills", function(skillsData){
        skillsData = decrypt(skillsData.r)
        skillsData.forEach(skill => {
            $(".list-skills").append(`
                <li>
                    <div class="flex items-center ps-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                        <p style="display:none">${skill.id}</p>
                        <input id="checkbox-${skill.id}" type="checkbox" value="${skill.skill}" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                        <label for="checkbox-${skill.id}" class="w-full py-2 ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">${skill.skill}</label>
                    </div>
                </li>
            `)
        })

        $(".skills-input").on("input", function(){
            const INPUT = $(this).val().toLowerCase(); // Ambil nilai input dalam lowercase
            $(".list-skills").html(""); // Kosongkan daftar institusi

            // Filter institusi berdasarkan nilai input
            const filteredSkills = skillsData.filter(skill => {
                return skill.skill.toLowerCase().includes(INPUT);
            });

            // Tampilkan hasil filter
            filteredSkills.forEach(skill => {
                const isChecked = checkedStatusSkills[skill.skill.toLowerCase()] ? 'checked' : ''; // Cek apakah checkbox harus dicentang
                $(".list-skills").append(`
                    <li>
                        <div class="flex items-center ps-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                            <p style="display:none">${skill.id}</p>
                            <input id="checkbox-${skill.id}" type="checkbox" ${isChecked} value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                            <label for="checkbox-${skill.id}" class="w-full py-2 ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">${skill.skill}</label>
                        </div>
                    </li>
                `);
            });
        });

        $(".list-skills").on("change", "input[type=checkbox]", function(){
            const SKILL_ID = $(this).prev().text();
            const LABEL = $(this).next().text();

            checkedStatusSkills[LABEL.toLowerCase()] = $(this).prop("checked");
            console.log(checkedStatusSkills);
            
        })
    })




    // Search Position and Company
    $("#form-search-job").submit(function(e){
        e.preventDefault()
        INPUT = $(this).find("#input-search").val()

        GetPosts(INPUT, LIMIT, PAGE)
    })

    // Filter By Locations
    $("#dropdown-location-dd-mobile").on("change", "input", function(){
        const THIS_VAL = $(this).val()
        PAGE = 1
        CountAllPlatform()
        if($(this).is(":checked")){
            LOCATIONS.push(THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }else{
            LOCATIONS = removeFromArray(LOCATIONS, THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }
    })

    $("#dropdown-skills-dd-mobile").on("change", "input", function(){
        const THIS_VAL = $(this).val()
        PAGE = 1
        CountAllPlatform()
        if($(this).is(":checked")){
            SKILLS.push(THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }else{
            SKILLS = removeFromArray(SKILLS, THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }
    })

    $("#dropdown-type-dd-mobile").on("change", "input", function(){
        const THIS_VAL = $(this).val()
        PAGE = 1
        CountAllPlatform()
        if($(this).is(":checked")){
            TYPE.push(THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }else{
            TYPE = removeFromArray(SKILLS, THIS_VAL)
            GetPosts(INPUT, LIMIT, PAGE, TYPE, LOCATIONS, SKILLS)
        }
    })




    function removeFromArray(arr, valueToRemove) {
        return arr.filter(item => item !== valueToRemove);
    }

    function decrypt(data, keys='<%= process.env.AES_KEYS %>'){
        let bytes = CryptoJS.AES.decrypt(data, keys)
        return JSON.parse(bytes.toString(CryptoJS.enc.Utf8))
    }

    function GetPosts(keyword="", limit='999', page=1, type="", location="", skills=""){
        location = JSON.stringify(location)
        skills = JSON.stringify(skills)
        type = JSON.stringify(type)

        const url = `/api/v1/posts?search=${keyword}&limit=${limit}&page=${page}&locations=${location}&skills=${skills}&type=${type}`

        $.get(url, function(postsData){
            postsData = decrypt(postsData.r)
            if (postsData.datas.length !== 0){
                $("#cards").html("")
                postsData.datas.forEach(post => {
                    GetCard(post)
                });
                $("#cards").removeClass("hidden")
                $("#cards-notfound").addClass("hidden")
                $("#paginations").removeClass("hidden")
            }else{
                $("#paginations").addClass("hidden")
                $("#cards").addClass("hidden")
                $("#cards-notfound").removeClass("hidden")
            }
        })
    }

    

    function GetCard(post){
        $.ajax({
            url: '/api/v1/users/info',
            type: 'get',
            dataType: 'json',
            headers: {
                "Authorization": window.USER_TOKEN,
            },
            success: async function (userData) {
                const data = decrypt(userData.r);
                
                let platform = getPlatformImage(post)
                let SKILLS = post.skills.map(function(skill){
                    return `<button class="text-xs bg-main text-white px-2 py-1 rounded">${skill.skill.length >= 18 ? skill.skill.substring(0,18)+".." : skill.skill}</button>`
                })
                let ACTIVE_SKILL = SKILLS.slice(0,4)
                let REMAIN = SKILLS.slice(ACTIVE_SKILL.length)

                let userSkillIds = data.skills.map(skill => skill.id);
                let matchingSkills = post.skills.some(skill => userSkillIds.includes(skill.id));
                
                
                
                $("#cards").append(`
                    <div class="job-detail cursor-pointer hover:scale-[1.005] duration-100 shadow-md border border-main bg-white p-4 rounded-2xl self-start">
                        <p class="id" style="display:none">${post.id}</p>
                        <p class="font-medium text-black mb-2">${post.title.length > 33 ? post.title.substring(0,33)+"..." : post.title}</p>
                        <div class="flex gap-2 flex-wrap">
                            ${ACTIVE_SKILL.join("")}
                            ${REMAIN.length != 0 ? `<button class="text-xs bg-main text-white px-2 py-1 rounded">+${REMAIN.length}</button>` : ""}
                        </div>
                        <p class="text-sm flex items-center gap-2 mt-4"><i class="uil uil-building"></i>${post.company.length > 38 ? post.company.substring(0,38) + ".." : post.company}</p>
                        <p class="text-sm flex items-center gap-2 mt-1"><i class="uil uil-location-point"></i> ${post.type} • ${post.location}</p>
                        <hr class="my-2">
                        <div class="flex items-center justify-between gap-3 mt-4">
                            <span class="${matchingSkills ? '' : 'invisible'} text-white text-xs font-medium bg-orange-500 px-2 py-1">kamu banget</span>
                            <div class="flex items-center gap-2">
                                <p class="text-sm flex items-center gap-2"><span class="text-xs font-medium">muncul di</span></p>
                                ${platform}
                                <p class="text-sm flex items-center gap-2"><span class="text-xs font-medium">${timeAgo(post.post_date)}</span></p>
                            </div>
                        </div>
                    </div>
                `)
                
            },
            error: function(xhr){
                let platform = getPlatformImage(post)
                let SKILLS = post.skills.map(function(skill){
                    return `<button class="text-xs bg-main text-white px-2 py-1 rounded">${skill.skill.length >= 18 ? skill.skill.substring(0,18)+".." : skill.skill}</button>`
                })
                let ACTIVE_SKILL = SKILLS.slice(0,4)
                let REMAIN = SKILLS.slice(ACTIVE_SKILL.length)
                $("#cards").append(`
                    <div class="job-detail cursor-pointer hover:scale-[1.005] duration-100 shadow-md border border-main bg-white p-4 rounded-2xl self-start">
                        <p class="id" style="display:none">${post.id}</p>
                        <p class="font-medium text-black mb-2">${post.title.length > 33 ? post.title.substring(0,33)+"..." : post.title}</p>
                        <div class="flex gap-2 flex-wrap">
                            ${ACTIVE_SKILL.join("")}
                            ${REMAIN.length != 0 ? `<button class="text-xs bg-main text-white px-2 py-1 rounded">+${REMAIN.length}</button>` : ""}
                        </div>
                        <p class="text-sm flex items-center gap-2 mt-4"><i class="uil uil-building"></i>${post.company.length > 38 ? post.company.substring(0,38) + ".." : post.company}</p>
                        <p class="text-sm flex items-center gap-2 mt-1"><i class="uil uil-location-point"></i> ${post.type} • ${post.location}</p>
                        <hr class="my-2">
                        <div class="flex items-center justify-between gap-3 mt-4">
                            <span class="invisible text-white text-xs font-medium bg-orange-500 px-2 py-1">kamu banget</span>
                            <div class="flex items-center gap-2">
                                <p class="text-sm flex items-center gap-2"><span class="text-xs font-medium">muncul di</span></p>
                                ${platform}
                                <p class="text-sm flex items-center gap-2"><span class="text-xs font-medium">${timeAgo(post.post_date)}</span></p>
                            </div>
                        </div>
                    </div>
                `)
            }
        })
    }

    function getPlatformImage(post){
        switch (post.platform) {
            case 'Glints':
                return '<img class="w-6 h-6 rounded-lg" src="/img/Glints.png" alt="Glints">';
            case 'Linkedin':
                return '<img class="w-6 h-6 rounded-lg" src="/img/Linkedin.png" alt="LinkedIn">';
            case 'Kalibrr':
                return '<img class="w-6 h-6 rounded-lg" src="/img/Kalibrr.png" alt="Kalibrr">';
            case 'Jobstreet':
                return '<img class="w-6 h-6 rounded-lg" src="/img/Jobstreet.png" alt="JobStreet">';
            case 'Indeed':
                return '<img class="w-6 h-6 rounded-lg" src="/img/Indeed.png" alt="Indeed">';
            default:
                return '<img class="w-6 h-6 rounded-lg" src="/img/Default.png" alt="Default">';
        }
    }

    function CountAllPlatform(){
        $.get("/api/v1/posts/count-all", postsCount =>{
            $(".total-post").text(postsCount)

            let startLimit = ((PAGE -1) * LIMIT)+1
            let endLimit = PAGE * LIMIT < postsCount ? PAGE * LIMIT : postsCount

            $("#limit-start").text(startLimit)
            $("#limit-end").text(endLimit)
            if(PAGE == 1) {
                $("#pagination-back").prop("disabled", true)
            }else{
                $("#pagination-back").prop("disabled", false)
            }
            if(PAGE * LIMIT >= postsCount){
                $("#pagination-forward").prop("disabled", true)
            }else{
                $("#pagination-forward").prop("disabled", false)
            }
        })
    }

    function timeAgo(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        
        // Menghilangkan perbedaan waktu agar hanya tanggal yang dibandingkan
        date.setHours(0, 0, 0, 0);
        now.setHours(0, 0, 0, 0);

        const diffInMilliseconds = now - date;
        const diffInDays = Math.floor(diffInMilliseconds / (1000 * 60 * 60 * 24));

        if (diffInDays < 7) {
            return `minggu ini`;
        } else if (diffInDays < 14) {
            return `minggu lalu`;
        } else {
            return `beberapa minggu lalu`;
        } 
    }
</script>